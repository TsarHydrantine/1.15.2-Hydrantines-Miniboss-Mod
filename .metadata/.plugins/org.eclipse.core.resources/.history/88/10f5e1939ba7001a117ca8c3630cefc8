package com.tsarhydrantine.tsbase.tsEnchantments;

import net.minecraft.advancements.criterion.EntityEquipmentPredicate;
import net.minecraft.enchantment.Enchantment;
import net.minecraft.enchantment.EnchantmentType;
import net.minecraft.inventory.EquipmentSlotType;

public class EnchantmentSlashing extends Enchantment {

	protected EnchantmentSlashing() {
		super(Rarity.COMMON, TsEnchantments.SLASHING , new EntityEquipmentPredicate(EquipmentSlotType.MAINHAND));
		this.setRegistryName("slashing");
	}
	
	@Override
	public int getMaxLevel() {
		return 4;
	}

}
