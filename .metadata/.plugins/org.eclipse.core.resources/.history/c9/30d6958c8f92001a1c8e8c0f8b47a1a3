package com.tsarhydrantine.tsbase;

import org.apache.logging.log4j.Logger;

import com.tsarhydrantine.tsbase.tsItems.TsItems;

import net.minecraft.item.Item;
import net.minecraft.item.Item.Properties;
import net.minecraft.item.ItemGroup;
import net.minecraft.util.ResourceLocation;
import net.minecraftforge.event.RegistryEvent;
import net.minecraftforge.eventbus.api.SubscribeEvent;
import net.minecraftforge.fml.common.Mod;

@Mod.EventBusSubscriber(bus=Mod.EventBusSubscriber.Bus.MOD)
public class Register {
	public static final Logger LOGGER = TsBase.logger;
	public static final String MODID = Reference.MOD_ID;
	
	@SubscribeEvent
	public static void registerItems(final RegistryEvent.Register<Item> event) {
		event.getRegistry().registerAll
		(
				TsItems.hellthorn = new Item(new Item.Properties().group(ItemGroup.MISC)).setRegistryName(location("hellthorn"));
		);
	}
	
	public static ResourceLocation location(String name) {
		return new ResourceLocation(MODID, name);
	}
}
